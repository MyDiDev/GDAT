    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q"
      crossorigin="anonymous"
    ></script>
    <script>
      const $ = (el) => document.getElementById(el);
      const sidebar = $("sideBar");
      const smSideBar = $("smSideBar");
      function checkSideBarResponsive() {
        if (window.innerWidth <= 768) {
          smSideBar.style.display = "block";
          sidebar.style.display = "none";
        } else {
          smSideBar.style.display = "none";
          sidebar.style.display = "block";
        }
      }
      const token = <%- JSON.stringify(token).toString() %>;
      const dashboardData = <%- JSON.stringify(data) %>;
      const transactionDates = [];
      const transactionAmounts = [];
      const transactionCategorys = {
        Deposit: 0,
        Withdraw: 0
      };
      dashboardData[1][0].forEach(transaction => {
        if (transaction.transaction_type == "Deposit")
          transactionCategorys.Deposit += transaction.amount;
        else if (transaction.transaction_type == "Withdraw")
          transactionCategorys.Withdraw += transaction.amount;
        transactionDates.push(transaction.transaction_day);
        transactionAmounts.push(transaction.amount);
      });
      new DataTable("#table");
      new Chart($("transactionsChart"), {
        type: "line",
        data: {
          labels: transactionDates,
          datasets: [
            {
              label: "Amount of Transactions",
              data: transactionAmounts,
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              betinAtZero: true,
            },
          },
        },
      });
      new Chart($("categoryChart"), {
        type: "pie",
        data: {
          labels: ["Deposit", "Withdraw"],
          datasets: [
            {
              label: "Categories",
              data: [transactionCategorys.Deposit, transactionCategorys.Withdraw],
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      $("periodDays").addEventListener("change", (ev) => {
        const periodDays = $("periodDays").value;
        window.location.href = `/dashboard/home?periodDays=${periodDays}`;
      })
    </script>
